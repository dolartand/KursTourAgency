<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.Pane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.Admin.Controllers.MainController">
   <left>
       <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Турагентство">
              <font>
                  <Font size="24.0" />
              </font>
              <VBox.margin>
                  <Insets top="10.0" />
              </VBox.margin>
           </Text>
           <Button fx:id="tours_btn" mnemonicParsing="false" onAction="#handleTours" text="Туры">
              <VBox.margin>
                  <Insets top="50.0" />
              </VBox.margin>
           </Button>
           <Button fx:id="bookings_btn" mnemonicParsing="false" onAction="#handleBookings" text="Бронирования">
              <VBox.margin>
                  <Insets top="10.0" />
              </VBox.margin>
           </Button>
           <Button fx:id="users_btn" mnemonicParsing="false" onAction="#handleUsers" text="Пользователи">
              <VBox.margin>
                  <Insets top="10.0" />
              </VBox.margin>
           </Button>
           <Line endX="100.0" startX="-100.0">
              <VBox.margin>
                  <Insets top="30.0" />
              </VBox.margin>
           </Line>
           <Button fx:id="logOut_btn" mnemonicParsing="false" onAction="#handleLogout" text="Выйти">
              <VBox.margin>
                  <Insets top="30.0" />
              </VBox.margin>
           </Button>
       </VBox>
   </left>
    <center>
        <Pane fx:id="contentArea" />
    </center>
</BorderPane>
